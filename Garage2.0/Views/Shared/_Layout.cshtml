<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Garage2.0</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Garage2._0.styles.css" asp-append-version="true" />

</head>

<body class="bg-light">
    <header class="Header text-center ">
     
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-white ">
            
            <div class="container-fluid fixed-top">
                 
                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center fixed-top center">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                       
                        <a class="navbar-link" asp-controller="ParkedVehicles" asp-action="Index" >
                        
                         
                         <li class="nav-item">
                            
                            <a class="nav-link text-light " asp-area="" asp-controller="ParkedVehicles" asp-action="Create">Park |</a>
                              
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ParkedVehicles" asp-action="Overview">Overview |</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="ParkedVehicles" asp-action="Index">List</a>
                        </li>
                        </a>  
                        
                    </ul>
                </div>
            </div>
        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="containerf" >
        
        &copy; Lexicon|2022 - Garage2.0 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>|<a href="#"> Back on top</a>
       
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
